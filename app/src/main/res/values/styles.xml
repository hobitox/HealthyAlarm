<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="some_id">

        <item name="android:textSize">
            45sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name="switch1">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name="label">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="navigation_avtive">

        <item name="android:textSize">
            25sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="navigation_inactive">

        <item name="android:textSize">
            25sp
        </item>

        <item name="android:textColor">
            #B2BBDB
        </item>

    </style>
    <style name="sleep_time">

        <item name="android:textSize">
            36sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/segoe</item>
    </style>
    <style name="wake_up_time">

        <item name="android:textSize">
            36sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>
    <style name="MyBase.TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize"> 30sp </item>
        <item name="android:text"></item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize"> 30sp </item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/layout_rounded_conner</item>
    </style>


</resources>
